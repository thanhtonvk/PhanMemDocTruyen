<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_ten_tap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tập 1: Thêm 1 lần đau"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_tom_tat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đêm hôm ấy đjao về nhà tay cầm chai rượu nghe vẻ chiến lắm nhưng không, còn nghiện này nso nát lắm rồi ae ạ" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>